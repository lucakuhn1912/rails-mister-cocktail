<div class="container">
  <h1>Your Cocktails</h1>
  <div class="cards">

    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do  %>
        <% if cocktail.photo.url %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
            <%= cocktail.name %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1551782450-3939704166fc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80')">
            <%= cocktail.name %>
          </div>
        <% end %>
      <% end %>

    <% end %>
  <%= link_to "Add New Cocktail", new_cocktail_path, class:"card" %>
  </div>
</div>
