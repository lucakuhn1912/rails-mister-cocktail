<div class="container">
  <h1>Your Cocktails</h1>
  <div class="cards">

    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do  %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>')">
          <%= cocktail.name %>
          </div>
        <% end %>

    <% end %>
  <%= link_to "Add New Cocktail", new_cocktail_path, class:"card" %>
  </div>
</div>
