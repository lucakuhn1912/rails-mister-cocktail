<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1546171753-97d7676e4602?ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <p>
      <% @cocktail.doses.each do |dose| %>
      <ul>
        <li><%= dose.ingredient.name %>
          <%= link_to dose_path(dose) , method: :delete,
          data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt"></i>
          <% end %>

</li>
      </ul>
      <% end %>
    </p>
    <%= link_to 'Add', new_cocktail_dose_path(@cocktail), class:'btn btn-primary' %>
    <%= link_to 'Back', cocktails_path, class:'btn btn-primary' %>
  </div>
</div>
